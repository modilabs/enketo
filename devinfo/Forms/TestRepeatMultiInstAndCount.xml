<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Test: Multiple Repeats included in Instance with a Count attributes that adds 2 more</h:title>
    <model>
      <instance>
        <data id="build_TestRepeatMultipleInstAndCount" version="1" xmlns="http://rapaide.com/testRepeatMultipleInstAndCount">
          <rep jr:template="">
            <nodeA>99</nodeA>
          </rep>
          <rep>
            <nodeA>1</nodeA>
          </rep>
          <rep>
            <nodeA>2</nodeA> 
          </rep>   
          <rep>
            <nodeA>3</nodeA> 
          </rep>  
          <sum/>
          <count>5</count>
        </data>
      </instance>
      <itext>
        <translation lang="eng">
          <text id="/data/rep:label">
            <value>Repeat group</value>
          </text>
          <text id="/data/rep/nodeA:label">
            <value>Enter number</value>
          </text>
          <text id="/data/rep/nodeA:hint">
            <value/>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/rep/nodeA" type="int"/>
      <bind nodeset="/data/sum" type="int" calculate="sum(/data/rep/nodeA)" />
    </model>
  </h:head>
  <h:body>
    <group>
      <label ref="jr:itext('/data/rep:label')" />
      <repeat nodeset="/data/rep" jr:count="/data/count">
        <input ref="/data/rep/nodeA">
          <label ref="jr:itext('/data/rep/nodeA:label')"/>
          <hint ref="jr:itext('/data/rep/nodeA:hint')"/>
        </input>
      </repeat>
    </group>
  </h:body>
</h:html>
