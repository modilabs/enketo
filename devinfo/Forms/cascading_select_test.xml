    <group ref="/countries/group1">
      <label>Cascading Selects with Radio Buttons</label>
      <select1 ref="/countries/group1/country">
        <label>Country</label>
        <item>
          <label ref="jr:itext('/countries/group1/country/nl:label')"/>
          <value>nl</value>
        </item>
        <item>
          <label ref="jr:itext('/countries/group1/country/usa:label')"/>
          <value>usa</value>
        </item>
      </select1>
      <select1 ref="/countries/group1/city">
        <label>City</label>
        <itemset nodeset="instance('cities')/root/item[country=/countries/group1/country]">
          <value ref="name"/>
          <label ref="jr:itext(itextId)"/>
        </itemset>
      </select1>
      <select1 ref="/countries/group1/neighborhood">
        <label>Neighborhood</label>
        <itemset nodeset="instance('neighborhoods')/root/item[country=/countries/group1/country and city=/countries/group1/city]">
          <value ref="name"/>
          <label ref="jr:itext(itextId)"/>
        </itemset>
      </select1>
    </group>
    <group ref="/countries/group2">
