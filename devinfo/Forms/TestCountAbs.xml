<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Test: Count(abs/path/to/node) - should invalidate all values once 5 repeats have been created</h:title>
    <model>
      <instance>
        <data id="build_TestCountDot" version="3" xmlns="http://rapaide.com/testCountDot">
          <rep jr:template="">
            <nodeA>5</nodeA>
          </rep>
          <sum/>
        </data>
      </instance>
      <itext>
        <translation lang="eng">
          <text id="/data/rep:label">
            <value>Repeat group</value>
          </text>
          <text id="/data/rep/nodeA:label">
            <value>Enter number</value>
          </text>
          <text id="/data/rep/nodeA:hint">
            <value/>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/rep/nodeA" type="int" constraint="count(/data/rep/nodeA) &lt; 5"/> 
    </model>
  </h:head>
  <h:body>
    <group>
      <label ref="jr:itext('/data/rep:label')" />
      <repeat nodeset="/data/rep">
        <input ref="/data/rep/nodeA">
          <label ref="jr:itext('/data/rep/nodeA:label')"/>
          <hint ref="jr:itext('/data/rep/nodeA:hint')"/>
        </input>
      </repeat>
    </group>
  </h:body>
</h:html>
