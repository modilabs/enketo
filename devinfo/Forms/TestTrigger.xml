<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Test: Trigger</h:title>
    <model>
      <instance>
        <data id="TestTrigger" version="1" xmlns="http://rapaide.com/testTrigger">
          <nodeA/>    
          <trig/>
          <nodeB/>
        </data>
      </instance>
      <bind nodeset="/data/nodeA" type="int"/>
      <bind nodeset="/data/nodeB" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group>
      <input ref="/data/nodeA">
        <label>Enter number</label>
      </input>
      <trigger ref="/data/trig">
        <label>check val of first input: <output value="/data/nodeA" /></label>
      </trigger>
      <input ref="/data/nodeB">
        <label>Enter some text</label>
      </input>
    </group>
  </h:body>
</h:html>
